<%-include("../partials/header")%>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h1 class="text-center"><%=user.firstName + " " + user.lastName%></h1>
            <img src="<%=user.avatar%>" alt="User Image" class="img-circle" style="height: 200px;">
        </div>
        <a href="mailto: <%=user.email%>"><%=user.email%></a>
    </div>
    <div class="row">
        <%for(var i = 0; i<campgrounds.length; i++){%>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="thumbnail">
                   <a href="/campgrounds/<%=campgrounds[i]._id%>">
                    <img src="<%=campgrounds[i].img%>" class="img-responsive" id="controlled">
                    <div class="caption">
                        <%=campgrounds[i].name%>
                    </div>
                   </a>
                    
                </div>
            </div>
                
        <%}%>
    </div>
</div>

    

<%-include("../partials/footer")%>
