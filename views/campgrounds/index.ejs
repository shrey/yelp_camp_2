<%-include("../partials/header")%>

<div class = "container">
	<div class = "jumbotron text-center">
		<div class = "container">
			<h1>
				Welcome to YelpCamp.
			</h1>
			<a href = "/campgrounds/new" class = "btn btn-primary btn-lg">Add New Camp</a>
		</div>	
	</div>	


	<div class = "row">
		<%for(var i = 0; i<camps.length; i++){%>
		<div class = "col-md-3 col-sm-6">
			<div class = "thumbnail">
				<img src ="<%=camps[i]["img"]%>" class = "resize">
				<div class = "caption">
					<h4>
						<%=camps[i]["name"]%>
					</h4>
                </div>
                <a href="/campgrounds/<%=camps[i]._id%>" class="btn btn-primary">Know More</a>
			</div>	
		</div>
		<%}%>
	</div>	
</div>	

<%-include("../partials/footer")%>